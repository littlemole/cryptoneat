{
    "version": 3,
    "configurePresets": [
      {
        "name": "win32",
        "description": "windows base preset",
        "hidden": true,
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/out/build/${presetName}",
        "installDir": "${sourceDir}/out/install/${presetName}",
        "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "environment": {
          "VCPKG_FEATURE_FLAGS": "manifests,versions,binarycaching,registries"
        },
        "condition": {
          "type": "equals",
          "lhs": "${hostSystemName}",
          "rhs": "Windows"
        }
      },
      {
        "name": "win-x64-debug",
        "displayName": "x64 Debug",
        "description": "Sets debug build type and x64 arch",
        "inherits": "win32",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/out/build/x64-Debug",
        "architecture": {
          "value": "x64",
          "strategy": "external"
        },
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug"
        }
      },
      {
        "name": "win-x64-release",
        "displayName": "x64 Release",
        "description": "Sets release build type",
        "inherits": "win-x64-debug",
        "binaryDir": "${sourceDir}/out/build/x64-Release",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Release"
        }
      },
      {
        "name": "gcc-debug",
        "displayName": "gcc Debug",
        "description": "linux base",
        "hidden": true,
        "binaryDir": "${sourceDir}/out/build/x64-Debug",
        "cacheVariables": {
          "CMAKE_C_COMPILER": "gcc",
          "CMAKE_CXX_COMPILER": "g++",
          "CMAKE_BUILD_TYPE": "Debug"
        },
        "condition": {
          "type": "equals",
          "lhs": "${hostSystemName}",
          "rhs": "Linux"
        }
      },
      {
        "name": "gcc-release",
        "displayName": "gcc Release",
        "description": "Sets release build type",
        "hidden": true,
        "inherits": "gcc-debug",
        "binaryDir": "${sourceDir}/out/build/x64-Release",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Release"
        }
      },
      {
        "name": "gcc-libevent-debug",
        "displayName": "gcc libevent Debug",
        "description": "Sets debug build type with libevent",
        "inherits": "gcc-debug",
        "cacheVariables": {
          "WITH_LIBEVENT": "On"
        }
      },
      {
        "name": "gcc-libevent-release",
        "displayName": "gcc libevent Release",
        "description": "Sets debug build type with libevent",
        "inherits": "gcc-release",
        "cacheVariables": {
          "WITH_LIBEVENT": "On"
        }
      }
    ],
    "buildPresets": [
      {
        "name": "default-build-linux",
        "displayName": "Default",
        "configurePreset": "gcc-libevent-debug",
        "description": "Vanilla build"
      },
      {
        "name": "default-build-windows",
        "displayName": "Default",
        "configurePreset": "win-x64-debug",
        "description": "Vanilla build"
      },
      {
        "name": "release-build-windows",
        "displayName": "Release",
        "configurePreset": "win-x64-release",
        "description": "Release build"
      }
    ],
    "testPresets": [
      {
        "name": "core-test-linux",
        "description": "Enable output on failure",
        "configurePreset": "gcc-debug",
        "output": {
          "outputOnFailure": true
        }
      },
      {
        "name": "debug-test-windows",
        "description": "Enable output on failure",
        "configurePreset": "win-x64-debug",
        "output": {
          "outputOnFailure": true
        }
      },
      {
        "name": "release-test-windows",
        "description": "Enable output on failure",
        "configurePreset": "win-x64-release",
        "output": {
          "outputOnFailure": true
        }
      }
    ]
  }
